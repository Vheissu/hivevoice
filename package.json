{
  "name": "hivevoice",
  "version": "1.0.0",
  "description": "Self-hosted invoicing system that integrates with the Hive blockchain",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "npm run build && node dist/index.js",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "hash-password": "node scripts/hash-password.js"
  },
  "keywords": [
    "invoicing",
    "hive",
    "blockchain",
    "self-hosted"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@hiveio/dhive": "^1.3.2",
    "@hono/node-server": "^1.18.1",
    "@hono/zod-validator": "^0.7.2",
    "bcryptjs": "^3.0.2",
    "cookie": "^1.0.2",
    "dotenv": "^17.2.1",
    "hono": "^4.8.12",
    "sqlite3": "^5.1.7",
    "uuid": "^11.1.0",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/cookie": "^1.0.0",
    "@types/node": "^24.2.0",
    "@types/sqlite3": "latest",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
